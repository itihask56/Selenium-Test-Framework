<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="SampleTestsSuite" parallel="methods" thread-count="2">
    
    <parameter name="browser" value="${browser}"/>
    <parameter name="environment" value="${environment}"/>
    
    <listeners>
        <listener class-name="com.framework.reporting.TestListener"/>
        <listener class-name="com.framework.reporting.RetryTransformer"/>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>
    
    <test name="BasicFunctionalityTests" preserve-order="true">
        <classes>
            <class name="com.framework.tests.SampleTest">
                <methods>
                    <include name="testPageLoad"/>
                    <include name="testDropdownSelection"/>
                    <include name="testAdvancedFeatures"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <test name="DataDrivenTests" preserve-order="true">
        <classes>
            <class name="com.framework.tests.SampleTest">
                <methods>
                    <include name="testLogin"/>
                    <include name="testSearch"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <test name="QualityAssuranceTests" preserve-order="true">
        <classes>
            <class name="com.framework.tests.SampleTest">
                <methods>
                    <include name="testCrossBrowserCompatibility"/>
                    <include name="testErrorHandling"/>
                    <include name="testPerformance"/>
                </methods>
            </class>
        </classes>
    </test>
    
</suite>