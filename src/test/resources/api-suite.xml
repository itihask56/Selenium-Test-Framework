<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="APITestSuite" parallel="methods" thread-count="2">
    
    <parameter name="environment" value="${environment}"/>
    
    <listeners>
        <listener class-name="com.framework.reporting.TestListener"/>
        <listener class-name="com.framework.reporting.RetryTransformer"/>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>
    
    <test name="APITests" preserve-order="true">
        <groups>
            <run>
                <include name="api"/>
            </run>
        </groups>
        <packages>
            <package name="com.framework.tests.api"/>
        </packages>
    </test>
    
</suite>